<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".userSignup">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="230dp"
        android:layout_height="150dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/recyclerlogo2" />

    <EditText
        android:id="@+id/name_input"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/textshape"
        android:ems="10"
        android:fontFamily="@font/montserrat"
        android:hint="Name..."
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="#FF9A9494"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <EditText
        android:id="@+id/email_input"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/textshape"
        android:ems="10"
        android:fontFamily="@font/montserrat"
        android:hint="Email..."
        android:inputType="textEmailAddress"
        android:textColor="#FFFFFF"
        android:textColorHint="#FF9A9494"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_input" />

    <EditText
        android:id="@+id/psswd_input"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/textshape"
        android:ems="10"
        android:fontFamily="@font/montserrat"
        android:hint="Password..."
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        android:textColorHint="#FF9A9494"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_input" />

    <EditText
        android:id="@+id/phone_input"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/textshape"
        android:ems="10"
        android:fontFamily="@font/montserrat"
        android:hint="Phone..."
        android:inputType="phone"
        android:textColor="#FFFFFF"
        android:textColorHint="#FF9A9494"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/psswd_input" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_input">

        <Button
            android:id="@+id/exit"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginStart="45dp"
            android:background="@drawable/buttonshape"
            android:fontFamily="@font/montserrat"
            android:text="Cancel"
            android:textColor="#090303" />

        <Button
            android:id="@+id/register"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/buttonshape"
            android:fontFamily="@font/montserrat"
            android:text="Submit"
            android:textColor="#050202" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>