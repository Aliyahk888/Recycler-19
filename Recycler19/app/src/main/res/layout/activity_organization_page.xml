<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".organizationPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/backbutts"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:text="Back" />

            <TextView
                android:id="@+id/orgName"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Organization Name"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/orgRecycleType"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Organization Type"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/orgAbout"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:text="Organization Description"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/covidLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:visibility="gone"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iscovidImg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="50dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/hazard" />

                <TextView
                    android:id="@+id/iscovidText"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="18sp"
                    android:text="This Organization deals with COVID-19 contaminated waste" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/deliveryLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/isdeliveryImg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="50dp"
                    app:srcCompat="@drawable/yass" />

                <TextView
                    android:id="@+id/isdeliveryText"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="18sp"
                    android:text="This Organization provides a doorstep pick-up option" />
            </LinearLayout>

            <Button
                android:id="@+id/callOrg"
                android:layout_width="200dp"
                android:layout_gravity="center"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:text="Call The Organization" />

            <Button
                android:id="@+id/mapOrg"
                android:layout_width="200dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="View on google maps" />

            <Button
                android:id="@+id/connectWithOrg"
                android:layout_width="200dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="!! Connect !!" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>