<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".orgSignup">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/TOPBAR"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/back_tobrowse"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:background="@drawable/buttonshape"
                    android:backgroundTint="#111111"
                    android:text="Back"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    app:layout_constraintEnd_toStartOf="@+id/btnSave"
                    app:layout_constraintStart_toEndOf="@+id/back_tobrowse"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/paul2" />

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:background="@drawable/buttonshape"
                    android:backgroundTint="#111111"
                    android:text="Signup"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/nameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:textAlignment="center">

                <LinearLayout
                    android:id="@+id/nameInnerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:textAlignment="center">

                    <TextView
                        android:id="@+id/nameText"
                        android:layout_width="125dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"
                        android:text="Organization Name :"
                        android:textSize="18sp"></TextView>

                    <EditText
                        android:id="@+id/orgNameInput"
                        android:layout_width="215dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:autoSizeTextType="uniform"
                        android:ems="10"
                        android:fontFamily="@font/montserrat"
                        android:inputType="textPersonName"
                        android:padding="10dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/emailLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:textAlignment="center">

                <LinearLayout
                    android:id="@+id/emailInnerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:textAlignment="center">

                    <TextView
                        android:id="@+id/emailText"
                        android:layout_width="125dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"
                        android:text="E-mail :"
                        android:textSize="18sp"></TextView>

                    <EditText
                        android:id="@+id/emailInput"
                        android:layout_width="215dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:autoSizeTextType="uniform"
                        android:ems="10"
                        android:fontFamily="@font/montserrat"
                        android:inputType="textEmailAddress"
                        android:padding="10dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/passwordLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:textAlignment="center">

                <LinearLayout
                    android:id="@+id/passwordInnerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:textAlignment="center">

                    <TextView
                        android:id="@+id/passwordText"
                        android:layout_width="125dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"
                        android:text="Password :"
                        android:textSize="18sp"></TextView>

                    <EditText
                        android:id="@+id/passwordInput"
                        android:layout_width="215dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:autoSizeTextType="uniform"
                        android:ems="10"
                        android:fontFamily="@font/montserrat"
                        android:inputType="textPassword"
                        android:padding="10dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/phoneLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:textAlignment="center">

                <LinearLayout
                    android:id="@+id/phoneInnerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:textAlignment="center">

                    <TextView
                        android:id="@+id/phoneText"
                        android:layout_width="125dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"
                        android:text="Organization Contact :"
                        android:textSize="18sp"></TextView>

                    <EditText
                        android:id="@+id/phoneInput"
                        android:layout_width="215dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:autoSizeTextType="uniform"
                        android:ems="10"
                        android:fontFamily="@font/montserrat"
                        android:inputType="phone"
                        android:padding="10dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/abtLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:textAlignment="center">

                <LinearLayout
                    android:id="@+id/abtInnerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:textAlignment="center">

                    <TextView
                        android:id="@+id/abtText"
                        android:layout_width="125dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"
                        android:text="About the Organization:"
                        android:textSize="18sp"></TextView>

                    <EditText
                        android:id="@+id/abtInput"
                        android:layout_width="215dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:autoSizeTextType="uniform"
                        android:ems="10"
                        android:fontFamily="@font/montserrat"
                        android:inputType="textLongMessage"
                        android:padding="10dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/TypeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:textAlignment="center">

                <LinearLayout
                    android:id="@+id/TypeInnerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="30dp"
                    android:paddingBottom="30dp"
                    android:textAlignment="center">

                    <TextView
                        android:id="@+id/typeText"
                        android:layout_width="125dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="15dp"
                        android:fontFamily="@font/montserrat"
                        android:text="Items Recycled :"
                        android:gravity="center"
                        android:textSize="18sp"></TextView>

                    <RadioGroup
                        android:id="@+id/typeGroup"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="20dp">

                        <RadioButton
                            android:id="@+id/paper"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:fontFamily="@font/montserrat"
                            android:text="Paper Waste"
                            android:textSize="18sp" />

                        <RadioButton
                            android:id="@+id/plastic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:text="Plastic Waste"
                            android:textSize="18sp" />

                        <RadioButton
                            android:id="@+id/medical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:text="Medical Waste"
                            android:textSize="18sp" />

                        <RadioButton
                            android:id="@+id/organic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:text="Organic Waste"
                            android:textSize="18sp" />

                        <RadioButton
                            android:id="@+id/ewaste"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:text="E-Waste"
                            android:textSize="18sp" />

                        <RadioButton
                            android:id="@+id/other"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:text="Other"
                            android:textSize="18sp" />
                    </RadioGroup>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/EPlaceLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:textAlignment="center">

                <LinearLayout
                    android:id="@+id/EPlaceInnerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="30dp"
                    android:paddingBottom="30dp"
                    android:textAlignment="center">

                    <TextView
                        android:id="@+id/eplacetext"
                        android:layout_width="125dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"
                        android:text="Location of Organization :"
                        android:textSize="18sp"></TextView>

                    <Button
                        android:id="@+id/bt_picker"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="120dp"
                        android:background="@drawable/searchicon"
                        android:gravity="center" />

                </LinearLayout>

                <TextView
                    android:id="@+id/eplaceseltext"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="50dp"
                    android:gravity="center"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="18sp"></TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/CovidLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:textAlignment="center">

                <TextView
                    android:id="@+id/covidtext"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/montserrat"
                    android:text="Does your Organization deal with COVID-19 contaminated waste?"
                    android:textSize="18sp"></TextView>

                <RadioGroup
                    android:id="@+id/contaminated"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingTop="10dp"
                    android:layout_marginStart="20dp">

                    <RadioButton
                        android:id="@+id/noCovid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:onClick="closed_enabled"
                        android:checked="true"
                        android:text="No"
                        android:textSize="18sp"
                        tools:ignore="OnClick"
                        tools:layout_editor_absoluteX="23dp"
                        tools:layout_editor_absoluteY="335dp" />

                    <RadioButton
                        android:id="@+id/yesCovid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:onClick="open_enabled"
                        android:text="Yes"
                        android:textSize="18sp"
                        tools:ignore="OnClick"
                        tools:layout_editor_absoluteX="25dp"
                        tools:layout_editor_absoluteY="398dp" />

                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/deliveryLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="30dp"
                android:textAlignment="center">

                <TextView
                    android:id="@+id/deliverytext"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/montserrat"
                    android:text="Does your Organization provide a door-step pickup option?"
                    android:textSize="18sp"></TextView>

                <RadioGroup
                    android:id="@+id/delivery"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingTop="10dp"
                    android:layout_marginStart="20dp">

                    <RadioButton
                        android:id="@+id/noDelivery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:checked="true"
                        android:text="No"
                        android:textSize="18sp"
                        tools:ignore="OnClick"
                        tools:layout_editor_absoluteX="23dp"
                        tools:layout_editor_absoluteY="335dp" />

                    <RadioButton
                        android:id="@+id/yesDelivery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="Yes"
                        android:textSize="18sp"
                        tools:ignore="OnClick"
                        tools:layout_editor_absoluteX="25dp"
                        tools:layout_editor_absoluteY="398dp" />

                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>